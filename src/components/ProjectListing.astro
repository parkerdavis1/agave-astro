---
const { project, showTag } = Astro.props;
---

<li>
    <a href={`/projects/${project.slug}`}>
        {project.data.title}
    </a>
    {
        showTag && (
            <div class="tags-list">
                {project.data.tags &&
                    project.data.tags.map((tag: string) => (
                        <p>
                            <a class="no-underline" href={`/tags/${tag}`}>
                                {tag}
                            </a>
                        </p>
                    ))}
            </div>
        )
    }
    <p>{project.data.description}</p>
</li>

<style>
    .tags-list {
        display: flex;
        column-gap: 0.5rem;
        flex-wrap: wrap;
        font-style: italic;
        font-size: var(--step-0);
        opacity: 50%;
    }
</style>
