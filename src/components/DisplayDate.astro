---
import dayjs from 'dayjs';
import utc from 'dayjs/plugin/utc';

dayjs.extend(utc);

const { date, format } = Astro.props;
const readableDate = dayjs(date).utc().format(format);
---

<div>
    <time datetime={date}>{readableDate}</time>
</div>

<style>
    time {
        font-size: var(--step--1);
    }
</style>
