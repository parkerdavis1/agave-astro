---
import MainFlow from '@layouts/MainFlow.astro';
import { metadata, emailSubject } from 'src/metadata.ts';
import { Image } from 'astro:assets';
import SaltRiver from './saltriver.jpg';
---

<MainFlow title="About">
    <h1>About Me</h1>
    <div class="portrait">
        <Image src={SaltRiver} alt="Parker recording swans on the Salt River" />
    </div>
    <p>
        I'm a web developer, biologist, musician, and sound enthusiast from
        Arizona.
    </p>
    <p>
        I specialize in creating lean performant full stack web applications and
        websites with an eye toward user experience. My freelancing company
        Branta Web has helped researchers, artists, and professionals improve
        their online presence.
    </p>
    <p>
        Get in touch with me at <a
            href=`mailto:${metadata.email}?subject=${emailSubject}`
            >{metadata.email}</a
        >
    </p>
</MainFlow>

<style>
    .portrait {
        width: 300px;
        max-width: 100%;
        float: right;
        padding: 1rem;
        margin: auto;
    }

    @media (max-width: 600px) {
        .portrait {
            float: none;
        }
    }
</style>
